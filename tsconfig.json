{
  "compilerOptions": {
    "target": "ES6",                      // or a target of your choice
    "module": "ES6",                      // or "commonjs", depending on your setup
    "moduleResolution": "node",           // use Node module resolution
    "strict": true,                       // enable strict type-checking
    "esModuleInterop": true,              // allow default imports from modules with no default export
    "skipLibCheck": true,                 // skip type checking of all declaration files
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["src"]
}
